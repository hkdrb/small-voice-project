# 必須: Google Gemini APIキー
# 取得方法: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here

# 任意: 使用するモデル名 (デフォルト: gemini-2.0-flash)
GEMINI_MODEL_NAME=gemini-2.0-flash

# 任意: AI分析時の並列実行数 (デフォルト: 20)
# 数値を上げると速度が向上しますが、API制限にかかりやすくなる可能性があります
MAX_WORKERS=20

# 任意: デフォルトのバッチサイズ (デフォルト: 10)
# 一度のリクエストで処理する件数です
BATCH_SIZE=10

# 必須: データベース接続URL
DATABASE_URL=postgresql://user:password@localhost/voice_insight_db

# Security: CORS Settings (Comma separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8501

# Security: Cookie Settings
# Set to "True" in production with HTTPS
SECURE_COOKIES=False 

# Security: Initial User Passwords (for fresh DB initialization)
# usage: replace these with strong passwords in your .env file
INITIAL_SYSTEM_PASSWORD=your_password
INITIAL_ADMIN_PASSWORD=your_password
INITIAL_USER_PASSWORD=your_password

# Email Configuration
# ENVIRONMENT: 'local' (default) or 'production'
ENVIRONMENT=local
# SMTP Settings (Required if ENVIRONMENT=production)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
SENDER_EMAIL=noreply@example.com
SENDER_NAME="Small Voice"
